<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/dark_color_background</item>
        <item name="android:windowBackground">@color/dark_color_background</item>
        <item name="colorBackgroundFloating">@color/dark_color_background</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

    <style name="FilePickerTheme.Light" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/light_color_background</item>
        <item name="android:windowBackground">@color/light_color_background</item>
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme.Light</item>
    </style>

    <style name="FilePickerAlertDialogTheme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

    <style name="ConfigTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#b0b0b0</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">38dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="TextViewVendor" parent="Widget.AppCompat.TextView" >
    </style>

</resources>
